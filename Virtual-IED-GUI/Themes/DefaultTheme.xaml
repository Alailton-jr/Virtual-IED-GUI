<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="DefaultBackgroundBrushDark" Color="#012239" />
    <SolidColorBrush x:Key="DefaultBackgroundBrushLight" Color="#405873" />
    <SolidColorBrush x:Key="DefaultBackgroundBrushMedium" Color="#314556" />
    <SolidColorBrush x:Key="DefaultForegroundBrush" Color="Lavender" />

    <!-- Text Box Colors -->
    <SolidColorBrush x:Key="TextBoxFocused" Color="#012239" />
    <SolidColorBrush x:Key="TextBoxHover" Color="DarkSlateGray" />
    <SolidColorBrush x:Key="TextBoxBackground" Color="Gray" />
    <SolidColorBrush x:Key="TextBoxForeground" Color="Lavender" />

    <!-- Button Colors -->
    <SolidColorBrush x:Key="ButtonBackground" Color="#016CB4" />
    <SolidColorBrush x:Key="ButtonForeground" Color="Lavender" />
    <SolidColorBrush x:Key="ButtonHover" Color="#005F8C" />
    <SolidColorBrush x:Key="ButtonPressed" Color="#012239" />

    <FontFamily x:Key="DefaultFontFamily">"Bell MT"</FontFamily>

    <Style TargetType="Control">
        <Setter Property="Foreground" Value="{StaticResource DefaultForegroundBrush}"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="HeaderTextBox">
        <Setter Property="FontSize" Value="22"/>
        <Setter Property="Foreground" Value="Lavender"/>
    </Style>


</ResourceDictionary>